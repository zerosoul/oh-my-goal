{
  "extends": ["eslint:recommended", "plugin:react/recommended", "prettier"],
  "plugins": ["react-hooks"],
  "rules": {
    "semi": 2,
    "no-console": "off",
    "react/prop-types": 0,
    "no-unused-vars": ["error", { "ignoreRestSiblings": true }],
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn",
    "max-lines": ["warn", 400]
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "serviceworker": true
  },
  "settings": {
    "react": {
      "version": "16.8"
    }
  }
}
